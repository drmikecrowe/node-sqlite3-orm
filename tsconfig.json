{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "stripInternal": false,
    "baseUrl": ".",
    "rootDirs": [ "./src" ],
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jasmine" ]
  },
  "include":[
      "./src/**/*"
  ],
  "exclude":[
      "./dist/**",
      "./node_modules/**",
      "./gulp/**"
  ]

}
